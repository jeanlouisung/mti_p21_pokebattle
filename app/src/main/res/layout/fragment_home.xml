<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/home_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="4dp"
        android:fontFamily="casual"
        android:text="PokeBattle"
        android:textColor="@android:color/holo_red_light"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_description_text"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="ICI LA DESCRIPTION BLABLABLABLABLALBALBALBALBALB LABLBA LALBALB AB LAB LA BLAB LAB AL BA LBB LAB LAB LAB L ABLB ALAB LAB LAB L"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_title_text" />

    <TextView
        android:id="@+id/home_application_author_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="An application made by:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_description_text" />

    <TextView
        android:id="@+id/home_application_author3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="SÃ©bastien Lin"
        app:layout_constraintStart_toEndOf="@+id/home_application_author_text"
        app:layout_constraintTop_toBottomOf="@+id/home_application_author2_text" />

    <TextView
        android:id="@+id/home_application_author1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Di Lam Nguyen"
        app:layout_constraintStart_toEndOf="@+id/home_application_author_text"
        app:layout_constraintTop_toBottomOf="@+id/home_description_text" />

    <TextView
        android:id="@+id/home_application_author2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Maxime Yip"
        app:layout_constraintStart_toEndOf="@+id/home_application_author_text"
        app:layout_constraintTop_toBottomOf="@+id/home_application_author1_text" />

    <TextView
        android:id="@+id/home_application_author4_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Jean-Louis Ung"
        app:layout_constraintStart_toEndOf="@+id/home_application_author_text"
        app:layout_constraintTop_toBottomOf="@+id/home_application_author3_text" />

    <Button
        android:id="@+id/home_battle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="64dp"
        android:text="Battle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_application_author4_text" />

    <Button
        android:id="@+id/home_pokedex_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="64dp"
        android:text="Pokedex"
        app:layout_constraintStart_toEndOf="@+id/home_battle_button"
        app:layout_constraintTop_toBottomOf="@+id/home_application_author4_text" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Made at"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="169dp"
        android:layout_height="109dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/epita" />

</androidx.constraintlayout.widget.ConstraintLayout>